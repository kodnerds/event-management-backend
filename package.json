{
  "name": "event-management",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@testcontainers/postgresql": "^11.7.1",
    "@testcontainers/redis": "^11.7.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.14.1",
    "redis": "^5.8.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "0.3.27"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "ts-node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "prepare": "husky",
    "dev": "nodemon src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "docker:run-build": "docker compose up --build",
    "docker:build": "docker compose build",
    "docker:run": "docker compose up",
    "docker:stop": "docker compose down",
    "test": "cross-env NODE_ENV=test jest --runInBand --coverage",
    "test:unit": "jest --runInBand --testPathPattern=unit",
    "test:integration": "jest --runInBand --testPathPattern=integration"
  }
}
